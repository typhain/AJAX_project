<h1 class="text-center">Emails</h1><br>
<div class="container mb-4 d-flex justify-content-center">
<a class="btn btn-primary w-50 " <%= link_to "Recevoir email", emails_path, method: :post, remote: true %></a>
</div>

  <div class="container d-flex flex-row">
    <div class="col-6 border">
      <h2 class="text-center mt-3">Liste des emails</h2>
        <div class= "card-body">
          <div class="card-title mt-5">
            <ul id="email-list">
            <% @emails.each do |email|  %>
            <%= render "body", email: email%>
            <% end %>
            </ul>
          </div>
        </div>
    </div>
      <div class="col-6 border pb-5">
        <h2 class="text-center mt-3">Emails sélectionnés</h2>
        <div class="card-title mt-5">
          <ul id="email-selected">
            <h3>Body</h3><br><p>Aucun email selectionné<p>
        </ul>
      </div>
  </div>
<div class="w-100"></div>
  </div>
